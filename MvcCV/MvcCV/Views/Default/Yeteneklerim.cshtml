@using MvcCV.Models.Entity
@model List<TblYeteneklerim>

@{string renk = ""; }
@{string labelrenk = ""; }
<div class="resume-section-content">
    <h2 class="mb-5">Yeteneklerim</h2>
    <div class="subheading mb-3">Programlama Dilleri & Araçlar</div>
    <ul class="list-inline dev-icons">
        <li class="list-inline-item"><i class="fab fa-html5"></i></li>
        <li class="list-inline-item"><i class="fab fa-css3"></i></li>
        <li class="list-inline-item"><i class="fab fa-python"></i></li>
        <li class="list-inline-item"><i class="fab fa-java"></i></li>
        <li class="list-inline-item"><i class="fa-solid fa-c"></i></li>
        <li class="list-inline-item"><i class="fab fa-node-js"></i></li>
        <li class="list-inline-item"><i class="fab fa-sass"></i></li>
        <li class="list-inline-item"><i class="fab fa-less"></i></li>
        <li class="list-inline-item"><i class="fab fa-wordpress"></i></li>
        <li class="list-inline-item"><i class="fab fa-gulp"></i></li>
        <li class="list-inline-item"><i class="fab fa-grunt"></i></li>
        <li class="list-inline-item"><i class="fab fa-npm"></i></li>
    </ul>
    <div class="subheading mb-3">Becerilerim</div>
    <ul class="fa-ul mb-0">
        @foreach (var item in Model)
        {
            if (item.Oran >= 0 && item.Oran <= 30)
            {
                renk = "progress-bar bg-danger";
                labelrenk = "badge bg-danger";
            }
            if (item.Oran >= 31 && item.Oran <= 60)
            {
                renk = "progress-bar bg-warning";
                labelrenk = "badge bg-warning";
            }
            if (item.Oran >= 61 && item.Oran <= 80)
            {
                renk = "progress-bar bg-info";
                labelrenk = "badge bg-secondary";
            }
            if (item.Oran >= 81 && item.Oran <= 100)
            {
                renk = "progress-bar bg-success";
                labelrenk = "badge bg-success";
            }

            <tr>
                <td>@item.ID - </td>
                <td>@item.Yetenek</td>
                <td>
                    <div class="progress progress-xs bg-">
                        <div class="@renk" style="width: @item.Oran%">@item.Oran%</div>
                    </div>
                    <br />
                </td>
                @*<td><span class="@labelrenk">@item.Oran%</span></td> *@
            </tr>
        }
    </ul>

</div>
